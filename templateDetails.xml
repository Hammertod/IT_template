<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>IT_template</name>
	<version>1.0</version>
	<creationDate>22/05/2017</creationDate>
	<author>Vitya and Denis</author>
	<authorEmail>modest-ua@i.ua</authorEmail>
	<copyright>Copyright (C) 2005 - 2017 Open Source Matters, Inc. All rights reserved.</copyright>
	<description>TPL_IT_TEMPLATE_XML_DESCRIPTION</description>
	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>

		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>

	</files>
	<positions>
		<position>search</position>
		<position>login</position>
		<position>navigation</position>
		<position>col-left</position>
		<position>col-right</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.IT_template.ini</language>
		<language tag="en-GB">en-GB/en-GB.IT_template.sys.ini</language>

		<language tag="en-GB">ru-RU/ru-RU.IT_template.ini</language>
		<language tag="en-GB">ru-RU/ru-RU.IT_template.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">

				<field name="sitename"  type="text" default=""
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					filter="string" />

			</fieldset>
		</fields>
	</config>
</extension>
